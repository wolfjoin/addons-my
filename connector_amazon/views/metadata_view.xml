<?xml version="1.0" encoding="UTF-8"?>
<openerp>
<data>

    <record id="view_attachment_improved_form" model="ir.ui.view">
        <field name="model">ir.attachment.metadata</field>
        <field name="inherit_id"
               ref="attachment_base_synchronize.view_attachment_improved_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@string='Attached To']" position="after">
                <group name="amazon" string="Amazon">
                    <field name="amazon_backend_id"/>
                    <field name="amazon_report_id"/>
                </group>
            </xpath>
        </field>
    </record>

</data>
</openerp>
